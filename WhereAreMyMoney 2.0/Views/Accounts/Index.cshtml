@model IEnumerable<WhereAreMyMoney_2._0.Models.Account>

@{
    ViewBag.Title = "Index";
}

<h2>Управление счетами</h2>

<p>
    @Html.ActionLink("Добавить счет", "Create", null, htmlAttributes: new { @class = "btn btn-primary" })
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayName("Название")
        </th>
        <th>
            @Html.DisplayName("Сумма")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>
