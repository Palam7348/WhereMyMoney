@model WhereAreMyMoney_2._0.Models.Operation

@{
    ViewBag.Title = "Delete";
}

<h2>Удаление операции</h2>

<h3>Вы уверенны, что хотите удалить данную операцию?</h3>
<div>
    <h4>Операция</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Название операции")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayName("Название категории")
        </dt>

        <dd>
            @ViewBag.Category
        </dd>

        <dt>
            @Html.DisplayName("Название счета")
        </dt>

        <dd>
            @ViewBag.Account
        </dd>

        <dt>
            @Html.DisplayName("Сумма")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Amount)
        </dd>

        <dt>
            @Html.DisplayName("Дата")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Вернуться к списку операций", "Index")
        </div>
    }
</div>
