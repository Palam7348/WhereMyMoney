@model WhereAreMyMoney_2._0.Models.Category

@{
    ViewBag.Title = "Delete";
}

<h2>Удаление категории</h2>

<h3>Вы уверенны, что хотите удалить данную категорию</h3>
<div>
    <h4>Категория</h4>
    <hr />
    <dl class="dl-horizontal">
       
        <dt>
            @Html.DisplayName("Описание")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayName("Название")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayName("Тип")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Вернуться к списку категорий", "Index")
        </div>
    }
</div>
